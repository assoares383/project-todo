#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

commit_msg_file=$1
commit_msg=$(cat $commit_msg_file)

commit_pattern="^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,}$"

if ! echo "$commit_msg" | grep -E "$commit_pattern" > /dev/null; then
  echo "âŒ Formato de commit invÃ¡lido."
  echo "âœ… Formato correto: <tipo>(escopo opcional): <descriÃ§Ã£o>"
  echo "ğŸ’¡ Tipos permitidos: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo "ğŸ“ Exemplo: feat(auth): adiciona autenticaÃ§Ã£o com Google"
  exit 1
fi